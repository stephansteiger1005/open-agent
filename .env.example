# Database Configuration
DATABASE_URL=sqlite:///data/app.db

# Authentication
AUTH_MODE=apikey
API_KEYS=dev_key_123456789

# Model Provider
MODEL_PROVIDER=openai
DEFAULT_MODEL=gpt-4

# MCP Servers (comma-separated)
MCP_SERVERS=

# Optional: OpenAI API Key (if using OpenAI provider)
OPENAI_API_KEY=

# Optional: OpenAI Timeout (in seconds, default: 60)
OPENAI_TIMEOUT=60

# Optional: Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# OpenWebUI Configuration
# OpenWebUI will be available at http://localhost:3000
# The pipe connects to the agent API using these credentials
AGENT_API_BASE_URL=http://api:8000
AGENT_API_KEY=dev_key_123456789
