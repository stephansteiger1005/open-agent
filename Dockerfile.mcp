FROM python:3.11-slim

WORKDIR /app

# Copy requirements file
COPY requirements.txt .

# Install dependencies
# Note: --trusted-host flags are used due to SSL certificate issues in the build environment
# In production, remove these flags and ensure proper SSL certificate configuration
RUN pip install --no-cache-dir --trusted-host pypi.org --trusted-host files.pythonhosted.org \
    -r requirements.txt

# Copy MCP server script
COPY mcp_server.py .

# Make script executable
RUN chmod +x mcp_server.py

# Expose port
EXPOSE 8080

# Run MCP server
CMD ["python", "mcp_server.py"]
